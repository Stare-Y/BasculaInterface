<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BasculaInterface.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BasculaInterface">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <Shadow
                x:Key="DefaultShadow"
                Opacity="0.5"
                Radius="2"
                Offset="0,7.5" />

            <Shadow
                x:Key="lblShadow"
                Opacity="0.5"
                Radius="1"
                Offset="0,4" />

            <Shadow
                x:Key="AndroidShadow"
                Opacity="0.5"
                Radius="1"
                Offset="0,1" />

            <Shadow
                x:Key="AndroidShadowButton"
                Opacity="0.5"
                Radius="1"
                Offset="0,4" />


            <Style x:Key="Logo" TargetType="Image">
                <Setter Property="Aspect" Value="AspectFill" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />

                <Setter Property="WidthRequest" Value="{OnPlatform Android=250, WinUI=400}" />

            </Style>

            <Style x:Key="Label" TargetType="Label">
                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="{StaticResource 1}" />
                <Setter Property="FontSize" Value="{OnPlatform Android=24, WinUI=32}" />


            </Style>

            <Style x:Key="Boton" TargetType="Button">

                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource 1}, Dark={StaticResource BlackTheme}}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="{OnPlatform Android=15, WinUI=24}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=100, WinUI=280}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=60, WinUI=80}" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="BorderWidth" Value="2" />



                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>


                        </VisualStateGroup>
                    </VisualStateGroupList>



                </Setter>
            </Style>

            <Style x:Key="BotonPrincipal" TargetType="Button">

                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                <Setter Property="TextColor" Value="{StaticResource 1}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="{OnPlatform Android=15, WinUI=24}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=100, WinUI=280}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=60, WinUI=80}" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="{StaticResource 1}" />
                <Setter Property="BorderWidth" Value="3" />



                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 4}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                                    <Setter Property="TextColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>


                        </VisualStateGroup>
                    </VisualStateGroupList>



                </Setter>
            </Style>

            <Style x:Key="HoverButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="16" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">

                            <!--  Normal  -->
                            <VisualState Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                    <Setter Property="BorderColor" Value="Transparent" />
                                    <Setter Property="TextColor" Value="Black" />
                                </VisualState.Setters>
                            </VisualState>

                            <!--  Hover (solo desktop/web)  -->
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <!--  Presionado  -->
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDark}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <!--  Deshabilitado  -->
                            <VisualState Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                    <Setter Property="BorderColor" Value="#CCC" />
                                    <Setter Property="TextColor" Value="#CCC" />
                                </VisualState.Setters>
                            </VisualState>

                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                <Setter Property="BorderColor" Value="{StaticResource 2}" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="TextColor" Value="{StaticResource 4}" />
                <Setter Property="FontSize" Value="16" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">

                            <!--  Normal (activo por defecto con color sólido)  -->

                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>
                            <!--  Hover: se invierte  -->


                            <!--  Presionado: más intenso  -->
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDark}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <!--  Deshabilitado  -->
                            <VisualState Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#CCC" />
                                    <Setter Property="BorderColor" Value="#CCC" />
                                    <Setter Property="TextColor" Value="White" />
                                </VisualState.Setters>
                            </VisualState>

                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>


            <Style x:Key="RoundedBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource 4}" />
                <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                <Setter Property="StrokeThickness" Value="3" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="StrokeShape" Value="RoundRectangle 30" />

                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                                    <Setter Property="Stroke" Value="{StaticResource 4}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                                    <Setter Property="Stroke" Value="{StaticResource 4}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>

                </Setter>
            </Style>

            <Style x:Key="EntryDatos" TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="FontFamily" Value="Montserrat" />
                <Setter Property="FontSize" Value="{OnPlatform Android=18, WinUI=24}" />


                <Style.Triggers>

                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 1}, Dark={StaticResource Black}}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="False">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource 1}}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource Gray}}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="False">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                    </Trigger>


                </Style.Triggers>

            </Style>

            <Style x:Key="EditorDatos" TargetType="Editor">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="FontFamily" Value="Montserrat" />
                <Setter Property="FontSize" Value="{OnPlatform Android=18, WinUI=24}" />


                <Style.Triggers>

                    <Trigger TargetType="Editor" Property="IsFocused" Value="True">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 1}, Dark={StaticResource Black}}" />
                    </Trigger>
                    <Trigger TargetType="Editor" Property="IsFocused" Value="False">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource 1}}" />
                    </Trigger>
                    <Trigger TargetType="Editor" Property="IsFocused" Value="True">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource Gray}}" />
                    </Trigger>
                    <Trigger TargetType="Editor" Property="IsFocused" Value="False">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                    </Trigger>


                </Style.Triggers>

            </Style>

            <Style x:Key="SearchBarDatos" TargetType="SearchBar">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource 1}}" />
                <Setter Property="FontFamily" Value="Montserrat" />
                <Setter Property="FontSize" Value="{OnPlatform Android=18, WinUI=24}" />
                <Setter Property="CancelButtonColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />

                <Style.Triggers>

                    <!--  Focused  -->
                    <Trigger TargetType="SearchBar" Property="IsFocused" Value="True">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 2}, Dark={StaticResource 3}}" />
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource 1}}" />
                    </Trigger>

                    <!--  Not Focused  -->
                    <Trigger TargetType="SearchBar" Property="IsFocused" Value="False">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 1}, Dark={StaticResource 1}}" />
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray}, Dark={StaticResource BlackGray}}" />
                        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource BlackGray}, Dark={StaticResource Gray}}" />
                    </Trigger>

                </Style.Triggers>

            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
