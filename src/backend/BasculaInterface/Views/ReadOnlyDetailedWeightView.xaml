<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BasculaInterface.Views.ReadOnlyDetailedWeightView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:BasculaInterface.Views.PopUps"
    xmlns:vm="clr-namespace:BasculaInterface.ViewModels"
    Title="Detalles de pesada (solo lectura)"
    BackgroundColor="{AppThemeBinding Light={StaticResource 1},
                                      Dark={StaticResource BlackTheme}}">
    <Grid>
        <Grid
            Margin="10"
            BackgroundColor="{AppThemeBinding Light={StaticResource 1},
                                              Dark={StaticResource BlackTheme}}"
            RowDefinitions="{OnPlatform Android='50,5,50,*,10,Auto',
                                        WinUI='100,Auto,100,*,Auto,Auto'}"
            RowSpacing="15">



            <Grid
                Grid.Row="0"
                ColumnDefinitions="{OnPlatform Android='50,*,120',
                                               WinUI='100,*,250'}"
                VerticalOptions="Center">

                <!--  BACK BUTTON (unchanged)  -->
                <Border
                    x:Name="BtnVolver"
                    Grid.Column="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    Stroke="{StaticResource 1}"
                    StrokeShape="RoundRectangle 30"
                    WidthRequest="{OnPlatform Android=50,
                                              WinUI=100}">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BtnVolver_Clicked" />
                    </Border.GestureRecognizers>

                    <Image Aspect="AspectFit" Source="{AppThemeBinding Light='back2.png', Dark='back.png'}" />
                </Border>

                <!--  PARTNER INFO (unchanged binding)  -->
                <Border
                    Grid.Column="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    StrokeShape="RoundRectangle 30">

                    <Label
                        FontAttributes="Bold"
                        Style="{StaticResource Label}"
                        Text="{Binding Partner.RazonSocial, StringFormat='Socio: {0}'}"
                        VerticalTextAlignment="Center" />
                </Border>

                <!--  CONTAPAQI BUTTON (NEW)  -->
                <Button
                    x:Name="BtnContpaqId"
                    Grid.Column="2"
                    BackgroundColor="{StaticResource 4}"
                    Clicked="BtnContpaqId_Clicked"
                    CornerRadius="30"
                    FontAttributes="Bold"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    Text="Contpaqi"
                    TextColor="White"
                    WidthRequest="{OnPlatform Android=120,
                                              WinUI=250}" />


            </Grid>


            <BoxView
                Grid.Row="1"
                HeightRequest="3"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Color="{AppThemeBinding Light={StaticResource 4},
                                        Dark={StaticResource BlackGray}}" />


            <Grid
                Grid.Row="2"
                ColumnDefinitions="{OnPlatform Android='15,0,70,80,*',
                                               WinUI='100,100,*,*,*'}"
                ColumnSpacing="25"
                VerticalOptions="Start">

                <Border
                    x:Name="BtnPrintTicket"
                    Grid.Column="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    HorizontalOptions="Start"
                    Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                    Stroke="{StaticResource 1}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="0"
                    Style="{StaticResource RoundedBorderStyle}"
                    WidthRequest="{OnPlatform Android=50,
                                              WinUI=100}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BtnPrintTicket_Clicked" />
                    </Border.GestureRecognizers>

                    <Image
                        x:Name="ImgPrinter"
                        Aspect="AspectFit"
                        HeightRequest="{OnPlatform Android=30,
                                                   WinUI=60}"
                        Source="{AppThemeBinding Light='printer.png',
                                                 Dark='printer2.png'}"
                        WidthRequest="{OnPlatform Android=30,
                                                  WinUI=60}" />

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">

                                <VisualState x:Name="Normal" />

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter TargetName="ImgPrinter" Property="Image.Source" Value="{AppThemeBinding Light='printer2.png', Dark='printer.png'}" />
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource Gray}}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter TargetName="ImgPrinter" Property="Image.Source" Value="printer.png" />
                                        <Setter Property="BackgroundColor" Value="{StaticResource 2}" />
                                    </VisualState.Setters>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Border>

                <Border
                    x:Name="BtnRefresh"
                    Grid.Column="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    HorizontalOptions="Start"
                    IsVisible="{OnPlatform Android=false,
                                           WinUI=true}"
                    Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                    Stroke="{StaticResource 1}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="0"
                    Style="{StaticResource RoundedBorderStyle}"
                    WidthRequest="{OnPlatform Android=50,
                                              WinUI=100}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BtnRefresh_Clicked" />
                    </Border.GestureRecognizers>

                    <Image
                        x:Name="ImgRefrsh"
                        Aspect="AspectFit"
                        HeightRequest="{OnPlatform Android=40,
                                                   WinUI=60}"
                        Source="{AppThemeBinding Light='refresh.png',
                                                 Dark='refresh2.png'}"
                        WidthRequest="{OnPlatform Android=40,
                                                  WinUI=60}" />

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">

                                <VisualState x:Name="Normal" />

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter TargetName="ImgRefrsh" Property="Image.Source" Value="{AppThemeBinding Light='refresh2.png', Dark='refresh.png'}" />
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource Gray}}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter TargetName="ImgRefrsh" Property="Image.Source" Value="refresh.png" />
                                        <Setter Property="BackgroundColor" Value="{StaticResource 2}" />
                                    </VisualState.Setters>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Border>

                <Border
                    Grid.Column="2"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    HorizontalOptions="Center"
                    Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                    Stroke="{StaticResource 1}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="0"
                    WidthRequest="{OnPlatform Android=85,
                                              WinUI=300}">

                    <Grid RowDefinitions="35,*">

                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{OnPlatform Android=11,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Notas"
                            TextColor="{AppThemeBinding Light={StaticResource 4},
                                                        Dark={StaticResource 2}}"
                            VerticalTextAlignment="Start" />

                        <Label
                            Grid.Row="1"
                            Margin="{OnPlatform Android='0,-10,0,0'}"
                            FontAttributes="Bold"
                            FontSize="{OnPlatform Android=10,
                                                  WinUI=20}"
                            Style="{StaticResource Label}"
                            Text="{Binding WeightEntry.Notes}"
                            TextColor="{AppThemeBinding Light={StaticResource Black},
                                                        Dark={StaticResource 1}}"
                            VerticalOptions="Start"
                            VerticalTextAlignment="Center" />


                    </Grid>

                </Border>

                <Border
                    Grid.Column="3"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    HorizontalOptions="Center"
                    Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                    Stroke="{AppThemeBinding Light={StaticResource 4},
                                             Dark={StaticResource 2}}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="2"
                    WidthRequest="{OnPlatform Android=85,
                                              WinUI=300}">


                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="{OnPlatform Android=12,
                                              WinUI=18}"
                        Style="{StaticResource Label}"
                        Text="{Binding WeightEntry.TareWeight, StringFormat='Tara (peso inicial): {0} kg.'}"
                        TextColor="{AppThemeBinding Light={StaticResource 4},
                                                    Dark={StaticResource 2}}"
                        VerticalTextAlignment="Center" />

                </Border>

                <Border
                    Grid.Column="4"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                      Dark={StaticResource BlackGray}}"
                    HeightRequest="{OnPlatform Android=50,
                                               WinUI=100}"
                    HorizontalOptions="End"
                    Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                    Stroke="{AppThemeBinding Light={StaticResource 4},
                                             Dark={StaticResource 2}}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="2"
                    WidthRequest="{OnPlatform Android=100,
                                              WinUI=300}">


                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="{OnPlatform Android=12,
                                              WinUI=18}"
                        Style="{StaticResource Label}"
                        Text="{Binding TotalWeight, StringFormat='Peso Total: {0} kg.'}"
                        TextColor="{AppThemeBinding Light={StaticResource 4},
                                                    Dark={StaticResource 2}}"
                        VerticalTextAlignment="Center" />

                </Border>

            </Grid>



            <Grid
                Grid.Row="3"
                Padding="{OnPlatform Android=30}"
                HorizontalOptions="{OnPlatform Android='Center'}"
                VerticalOptions="{OnPlatform Android='StartAndExpand'}">

                <Border
                    Padding="{OnPlatform WinUI=15}"
                    Stroke="{OnPlatform Android={StaticResource 1},
                                        WinUI={StaticResource BlackTheme}}"
                    StrokeShape="RoundRectangle 30"
                    StrokeThickness="0">


                    <RefreshView
                        x:Name="RefreshViewPendingWeights"
                        Command="{Binding RefreshCommand}"
                        IsRefreshing="{Binding IsRefreshing}">

                        <CollectionView
                            x:Name="CollectionViewWeightDetails"
                            HorizontalOptions="Center"
                            ItemsSource="{Binding WeightEntryDetailRows}"
                            SelectionMode="None"
                            VerticalOptions="Start">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="BtnSelectedItem"
                                        Background="{AppThemeBinding Light={StaticResource Gray},
                                                                     Dark={StaticResource BlackGray}}"
                                        HeightRequest="{OnPlatform Android=85,
                                                                   WinUI=125}"
                                        Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                                        Stroke="{OnPlatform Android={StaticResource 4},
                                                            WinUI={StaticResource 1}}"
                                        StrokeShape="RoundRectangle 30"
                                        StrokeThickness="0"
                                        Style="{StaticResource RoundedBorderStyle}">
                                        <Grid Padding="20" ColumnDefinitions="{OnPlatform Android='30,125,50,5,50', WinUI='Auto,*,*,20,*'}">


                                            <VerticalStackLayout
                                                Grid.Column="1"
                                                HorizontalOptions="Center"
                                                InputTransparent="True"
                                                Spacing="5"
                                                VerticalOptions="Center">
                                                <HorizontalStackLayout
                                                    HorizontalOptions="Start"
                                                    Spacing="5"
                                                    VerticalOptions="Center">

                                                    <Label
                                                        FontSize="{OnPlatform Android=11,
                                                                              WinUI=25}"
                                                        Style="{StaticResource Label}"
                                                        Text="{Binding OrderIndex, StringFormat='{0}.- '}"
                                                        TextColor="{AppThemeBinding Light={StaticResource 4},
                                                                                    Dark={StaticResource 2}}" />
                                                    <Label
                                                        FontSize="{OnPlatform Android=11,
                                                                              WinUI=25}"
                                                        Style="{StaticResource Label}"
                                                        Text="{Binding Description, StringFormat='{0}. '}"
                                                        TextColor="{AppThemeBinding Light={StaticResource 4},
                                                                                    Dark={StaticResource 2}}" />
                                                </HorizontalStackLayout>

                                                <Label
                                                    FontSize="{OnPlatform Android=8,
                                                                          WinUI=20}"
                                                    Style="{StaticResource Label}"
                                                    Text="{Binding RequiredAmountText, StringFormat='{0} kg. '}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                                Dark={StaticResource 1}}"
                                                    VerticalTextAlignment="Center" />

                                                <Label
                                                    FontAttributes="Italic"
                                                    FontSize="13"
                                                    HorizontalOptions="Start"
                                                    Style="{StaticResource Label}"
                                                    Text="{Binding WeightedBy, StringFormat='Pesado por: {0}'}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                                Dark={StaticResource 1}}"
                                                    VerticalTextAlignment="Center" />

                                            </VerticalStackLayout>

                                            <VerticalStackLayout
                                                Grid.Column="2"
                                                HorizontalOptions="Center"
                                                InputTransparent="True"
                                                Spacing="5"
                                                VerticalOptions="Center">

                                                <Label
                                                    FontSize="{OnPlatform Android=10,
                                                                          WinUI=28}"
                                                    Style="{StaticResource Label}"
                                                    Text="Tara"
                                                    TextColor="{AppThemeBinding Light={StaticResource 4},
                                                                                Dark={StaticResource 2}}" />

                                                <Label
                                                    FontSize="{OnPlatform Android=10,
                                                                          WinUI=26}"
                                                    Style="{StaticResource Label}"
                                                    Text="{Binding Tare, StringFormat='{}{0:F2} kg'}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                                Dark={StaticResource 1}}" />

                                            </VerticalStackLayout>

                                            <Label
                                                Grid.Column="3"
                                                FontSize="{OnPlatform Android=10,
                                                                      WinUI=26}"
                                                InputTransparent="True"
                                                Style="{StaticResource Label}"
                                                Text="+"
                                                TextColor="{AppThemeBinding Light={StaticResource 4},
                                                                            Dark={StaticResource 2}}" />


                                            <VerticalStackLayout
                                                Grid.Column="4"
                                                HorizontalOptions="Center"
                                                InputTransparent="True"
                                                Spacing="5"
                                                VerticalOptions="Center">

                                                <Label
                                                    FontSize="{OnPlatform Android=10,
                                                                          WinUI=28}"
                                                    Style="{StaticResource Label}"
                                                    Text="Peso"
                                                    TextColor="{AppThemeBinding Light={StaticResource 4},
                                                                                Dark={StaticResource 2}}" />

                                                <Label
                                                    FontSize="{OnPlatform Android=10,
                                                                          WinUI=26}"
                                                    Style="{StaticResource Label}"
                                                    Text="{Binding Weight, StringFormat='{}{0:F2} kg'}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                                Dark={StaticResource 1}}" />

                                            </VerticalStackLayout>

                                        </Grid>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroupList>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=LightGray, Dark={StaticResource WhiteGray}}" />
                                                            <Setter Property="Stroke" Value="{StaticResource 2}" />
                                                        </VisualState.Setters>
                                                    </VisualState>

                                                    <VisualState x:Name="Pressed">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                                                            <Setter Property="Stroke" Value="{StaticResource 2}" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateGroupList>
                                        </VisualStateManager.VisualStateGroups>
                                    </Border>

                                </DataTemplate>

                            </CollectionView.ItemTemplate>

                            <CollectionView.EmptyView>

                                <Grid
                                    Padding="250"
                                    HorizontalOptions="Center"
                                    RowDefinitions="*,*"
                                    RowSpacing="50"
                                    VerticalOptions="Fill">

                                    <Image
                                        Grid.Row="0"
                                        Aspect="AspectFill"
                                        HeightRequest="100"
                                        HorizontalOptions="Center"
                                        Source="info.png"
                                        VerticalOptions="Center"
                                        WidthRequest="100" />

                                    <Label
                                        Grid.Row="1"
                                        HorizontalOptions="Center"
                                        Style="{StaticResource Label}"
                                        Text="No hay productos ingresados"
                                        TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                    Dark={StaticResource 1}}"
                                        VerticalOptions="Center" />
                                </Grid>

                            </CollectionView.EmptyView>

                        </CollectionView>

                    </RefreshView>

                </Border>

            </Grid>

            <BoxView
                Grid.Row="4"
                HeightRequest="3"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                Color="{AppThemeBinding Light={StaticResource 4},
                                        Dark={StaticResource BlackGray}}" />

        </Grid>
        <components:WaitPopUp x:Name="WaitPopUp" />
        <components:PickQuantityPopUp x:Name="PickPopUp" />
    </Grid>
</ContentPage>