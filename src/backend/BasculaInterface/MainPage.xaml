<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BasculaInterface.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:BasculaInterface.Views.PopUps"
    xmlns:local="clr-namespace:BasculaInterface"
    xmlns:vm="clr-namespace:BasculaInterface.ViewModels">

    <Grid>

        <Image Aspect="AspectFill" Source="background.png" />

        <Grid
            Padding="30"
            RowDefinitions="1.5*,Auto,Auto,*"
            RowSpacing="30">

            <!--  Título de bienvenida  -->
            <StackLayout Grid.Row="0" Margin="0,50,0,0">

                <Image Source="logo.png" Style="{StaticResource Logo}" />

            </StackLayout>

            <Label
                Grid.Row="1"
                FontAttributes="Bold"
                FontFamily="{OnPlatform Android=28,
                                        WinUI=42}"
                Style="{StaticResource Label}"
                Text="Control de basculas y pedidos" />

            <!--  Botón de login gigante  -->
            <Grid
                Grid.Row="2"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <Button
                    x:Name="BtnLogIn"
                    HeightRequest="{OnPlatform Android=75,
                                               WinUI=100}"
                    Pressed="BtnLogin_Pressed"
                    Released="BtnLogin_Released"
                    Shadow="{StaticResource DefaultShadow}"
                    Style="{StaticResource Boton}"
                    Text="Login"
                    WidthRequest="{OnPlatform Android=200,
                                              WinUI=300}" />
            </Grid>

            <!--  Elementos ocultos opcionales  -->
            <StackLayout
                Grid.Row="3"
                Spacing="10"
                VerticalOptions="End">
                <Border
                    x:Name="BorderEntryHost"
                    HorizontalOptions="Fill"
                    IsVisible="False"
                    Style="{StaticResource RoundedBorderStyle}"
                    VerticalOptions="Center">
                    <Entry
                        x:Name="EntryHost"
                        Placeholder="Ingrese la Direccion del Host..."
                        Style="{StaticResource EntryDatos}" />
                </Border>

                <ScrollView
                    x:Name="ScrollCheckBox"
                    IsVisible="False"
                    Orientation="Horizontal">

                    <HorizontalStackLayout
                        x:Name="StackCheckBox"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Spacing="{OnPlatform Android=10,
                                             WinUI=20}">


                        <Border
                            x:Name="BtnSettings"
                            Grid.Column="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray},
                                                              Dark={StaticResource BlackGray}}"
                            HeightRequest="{OnPlatform Android=50,
                                                       WinUI=100}"
                            HorizontalOptions="Start"
                            Shadow="{OnPlatform WinUI={StaticResource DefaultShadow}}"
                            Stroke="{StaticResource 1}"
                            StrokeShape="RoundRectangle 30"
                            Style="{StaticResource RoundedBorderStyle}"
                            WidthRequest="{OnPlatform Android=50,
                                                      WinUI=100}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="BtnSettings_Tapped" />
                            </Border.GestureRecognizers>


                            <Image
                                x:Name="imgSettings"
                                Aspect="AspectFit"
                                HeightRequest="{OnPlatform Android=40,
                                                           WinUI=60}"
                                Source="{AppThemeBinding Light='settings.png',
                                                         Dark='settings.png'}"
                                WidthRequest="{OnPlatform Android=40,
                                                          WinUI=60}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">

                                        <VisualState x:Name="Normal" />

                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource 1}, Dark={StaticResource 4}}" />
                                                <Setter Property="Stroke" Value="{StaticResource 2}" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{StaticResource 2}" />
                                            </VisualState.Setters>
                                        </VisualState>

                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </VisualStateManager.VisualStateGroups>
                        </Border>

                        <CheckBox x:Name="CheckBoxSecondaryTerminal" CheckedChanged="CheckBoxSecondaryTerminal_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Usar terminal secundaria" />
                        <CheckBox x:Name="CheckBoxManualWeight" CheckedChanged="CheckBoxManualWeight_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Capturar peso manualmente" />

                        <CheckBox x:Name="CheckBoxRequirePartner" CheckedChanged="CheckBoxRequirePartner_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Forzar elegir socio" />

                        <CheckBox x:Name="CheckBoxOnlyPedidos" CheckedChanged="CheckBoxOnlyPedidos_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Solo Pedidos" />

                        <CheckBox x:Name="CheckBoxBypasTurn" CheckedChanged="CheckBoxBypasTurn_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Omitir Turno de Bascula" />

                    </HorizontalStackLayout>
                </ScrollView>
            </StackLayout>

        </Grid>

        <components:WaitPopUp x:Name="WaitPopUp" />

    </Grid>

</ContentPage>
