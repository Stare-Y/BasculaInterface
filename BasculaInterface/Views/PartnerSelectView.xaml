<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasculaInterface.ViewModels"
             x:Class="BasculaInterface.Views.PartnerSelectView"
             Title="PartnerSelectView">
    <ContentPage.BindingContext>
        <vm:PartnerSelectorViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" ColumnSpacing="10" Padding="10" >

        <!-- Fila de bÃºsqueda -->
        <Grid Grid.Row="0" ColumnDefinitions="9*,1*" RowDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Volver"
        x:Name="BtnBack"
        Grid.Column="0"
        Clicked="OnBackClicked"
        IsVisible="True"
        Grid.Row="0"
        HorizontalOptions="Start"/>
            <SearchBar x:Name="SearchBar"
                Placeholder="Buscar Socio..."
                SearchButtonPressed="SearchBar_SearchButtonPressed"
                Grid.Column="0"
                       Grid.Row="1"/>

            <Button Text="Confirmar"
                x:Name="BtnConfirm"
                Grid.Column="2"
                Clicked="OnConfirmClicked"
                IsEnabled="False"
                    Grid.Row="1"/>
        </Grid>

        <!-- Resultados -->
        <CollectionView Grid.Row="1"
                    x:Name="ResultsCollectionView"
                    SelectionMode="Single"
                    ItemsSource="{Binding Partners}"
                    SelectionChanged="ResultsCollectionView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border  Stroke="#CCC"
                            StrokeThickness="1"
                            Background="#F7F7F7"
                            StrokeShape="RoundRectangle 21"
                            Padding="12">
                        <Label Text="{Binding RazonSocial}" TextColor="Black"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="No se encontraron clientes con ese nombre." 
                        HorizontalOptions="Center" 
                        VerticalOptions="Center" 
                        TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}}"
                        FontSize="Subtitle"/>
            </CollectionView.EmptyView>
        </CollectionView>

    </Grid>
</ContentPage>