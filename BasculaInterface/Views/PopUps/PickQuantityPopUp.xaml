<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                CanBeDismissedByTappingOutsideOfPopup="False"
                x:Class="BasculaInterface.Views.PopUps.PickQuantityPopUp"
                Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark} }">

    <!-- Popup overlay -->
    <Grid   x:Name="PopupOverlay"
            BackgroundColor="#80000000" 
            ZIndex="10"
            RowDefinitions="Auto,Auto,Auto" 
            Padding="20" 
            RowSpacing="15"
            MinimumWidthRequest="300">

        <!-- Product Name -->
        <Label x:Name="ProductNameLabel"
               Text="Product Name"
               FontSize="20"
               HorizontalOptions="Center"
               Grid.Row="0"/>

        <!-- Quantity Entry -->
        <Entry x:Name="QuantityEntry"
               Placeholder="Cantidad..."
               Keyboard="Numeric"
               HorizontalOptions="Fill"
               TextChanged="QuantityEntry_TextChanged"
               Grid.Row="1"/>

        <!-- Action Buttons -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Grid.Row="2">
            <Button Text="Cancelar"  Clicked="OnPopupCancelClicked" BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource TertiaryDark}}"/>
            <Button Text="Continuar" Clicked="OnPopupAcceptClicked" BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource TertiaryDark}}"/>
        </HorizontalStackLayout>

    </Grid>
</toolkit:Popup>