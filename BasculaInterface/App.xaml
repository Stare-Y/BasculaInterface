<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BasculaInterface.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BasculaInterface">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <Shadow
                x:Key="DefaultShadow"
                Brush="Black"
                Opacity="1"
                Radius="30"
                Offset="10,10" />


            <Style x:Key="Logo" TargetType="Image">
                <Setter Property="Aspect" Value="AspectFill" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />

                <Setter Property="WidthRequest" Value="{OnPlatform Android=250, WinUI=400}" />

            </Style>

            <Style x:Key="Label" TargetType="Label">
                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="{StaticResource 1}" />
                <Setter Property="FontSize" Value="{OnPlatform Android=24, WinUI=32}" />


            </Style>

            <Style x:Key="Boton" TargetType="Button">

                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                <Setter Property="TextColor" Value="{StaticResource 4}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="{OnPlatform Android=18, WinUI=24}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=200, WinUI=300}" />
                <Setter Property="HeightRequest" Value="100" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="{StaticResource 4}" />
                <Setter Property="BorderWidth" Value="4" />
                <Setter Property="Shadow" Value="{StaticResource DefaultShadow}" />



                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                    <Setter Property="Shadow">
                                        <Setter.Value>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.8"
                                                Radius="10"
                                                Offset="5,5" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>


                        </VisualStateGroup>
                    </VisualStateGroupList>



                </Setter>
            </Style>

            <Style x:Key="RoundedBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource 4}" />
                <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                <Setter Property="StrokeThickness" Value="3" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="StrokeShape" Value="RoundRectangle 30" />


            </Style>

            <Style x:Key="EntryDatos" TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                <Setter Property="TextColor" Value="{StaticResource 4}" />
                <Setter Property="FontFamily" Value="Montserrat" />
                <Setter Property="FontSize" Value="{OnPlatform Android=18, WinUI=24}" />


                <Style.Triggers>

                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="TextColor" Value="{StaticResource 1}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="False">
                        <Setter Property="TextColor" Value="{StaticResource 4}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                    </Trigger>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="False">
                        <Setter Property="BackgroundColor" Value="{StaticResource 1}" />
                    </Trigger>


                </Style.Triggers>

            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
