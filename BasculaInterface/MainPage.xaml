<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasculaInterface.ViewModels"
             xmlns:local="clr-namespace:BasculaInterface"
             x:Class="BasculaInterface.MainPage">

    <Grid RowDefinitions="2*,3*,auto" Padding="20">

        <!-- Título de bienvenida -->
        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" Spacing="13">
            <Label Text="Cooperativa Pedro Ezqueda" 
                   FontSize="{OnPlatform Android=36, WinUI=54}" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"/>
            <Label Text="Control de basculas y pedidos" 
                   FontSize="{OnPlatform Android=21, WinUI=36}" 
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Botón de login gigante -->
        <Grid Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Button x:Name="BtnLogIn"
                        Pressed="BtnLogin_Pressed"
                        Released="BtnLogin_Released"
                        BackgroundColor="LightSkyBlue"
                        FontSize="Title"
                        FontAttributes="Bold"
                        Text="Login"
                        MinimumWidthRequest="{OnPlatform Android=250, WinUI=430}"
                        MinimumHeightRequest="130"/>
        </Grid>

        <!-- Elementos ocultos opcionales -->
        <StackLayout Grid.Row="2" Spacing="10">
            <Border x:Name="BorderEntryHost"
                    IsVisible="False"
                    Stroke="#ccc"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 30"
                    BackgroundColor="White"
                    Padding="5">
                <Entry x:Name="EntryHost"
                       FontSize="Subtitle"
                       Placeholder="Host"
                       TextColor="Black"/>
            </Border>

            <HorizontalStackLayout IsVisible="False"
                                  x:Name="StackCheckBox"
                                  Spacing="10">
                <CheckBox x:Name="CheckBoxSecondaryTerminal"
                          CheckedChanged="CheckBoxSecondaryTerminal_CheckedChanged"/>
                <Label Text="Usar terminal secundaria"
                       VerticalOptions="Center"/>
                <CheckBox x:Name="CheckBoxManualWeight"
                          CheckedChanged="CheckBoxManualWeight_CheckedChanged"/>
                <Label Text="Capturar peso manualmente"
                       VerticalOptions="Center"/>
                <CheckBox x:Name="CheckBoxRequirePartner"
                          CheckedChanged="CheckBoxRequirePartner_CheckedChanged"/>
                <Label Text="Forzar elegir socio"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </StackLayout>

    </Grid>

</ContentPage>
