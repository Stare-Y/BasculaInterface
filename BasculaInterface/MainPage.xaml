<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BasculaInterface.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BasculaInterface"
    xmlns:vm="clr-namespace:BasculaInterface.ViewModels">

    <Grid>

        <Image         
            Aspect="AspectFill" Source="background.png" />

        <Grid
            Padding="30"
            RowDefinitions="1.5*,Auto,Auto,*"
            RowSpacing="30">

            <!--  Título de bienvenida  -->
            <StackLayout 
                Margin="0,50,0,0"
                Grid.Row="0">

                <Image Source="logo.png" Style="{StaticResource Logo}" />

            </StackLayout>

            <Label
                Grid.Row="1"
                FontAttributes="Bold"
                FontFamily="{OnPlatform Android=28,
                                        WinUI=42}"
                Style="{StaticResource Label}"
                Text="Control de basculas y pedidos" />

            <!--  Botón de login gigante  -->
            <Grid
                Grid.Row="2"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <Button
                    x:Name="BtnLogIn"
                    Pressed="BtnLogin_Pressed"
                    Released="BtnLogin_Released"
                    Style="{StaticResource Boton}"
                    Text="Login" />
            </Grid>

            <!--  Elementos ocultos opcionales  -->
            <StackLayout
                Grid.Row="3"
                Spacing="10"
                VerticalOptions="End">
                <Border
                    x:Name="BorderEntryHost"
                    HorizontalOptions="Fill"
                    IsVisible="False"
                    Style="{StaticResource RoundedBorderStyle}"
                    VerticalOptions="Center">
                    <Entry
                        x:Name="EntryHost"
                        Placeholder="Ingrese la Direccion del Host..."
                        Style="{StaticResource EntryDatos}" />
                </Border>

                <ScrollView
                    x:Name="ScrollCheckBox"
                    IsVisible="False"
                    Orientation="Horizontal">

                    <HorizontalStackLayout
                        x:Name="StackCheckBox"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Spacing="{OnPlatform Android=10,
                                             WinUI=20}">



                        <CheckBox x:Name="CheckBoxSecondaryTerminal" CheckedChanged="CheckBoxSecondaryTerminal_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Usar terminal secundaria" />
                        <CheckBox x:Name="CheckBoxManualWeight" CheckedChanged="CheckBoxManualWeight_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Capturar peso manualmente" />

                        <CheckBox x:Name="CheckBoxRequirePartner" CheckedChanged="CheckBoxRequirePartner_CheckedChanged" />

                        <Label
                            FontSize="{OnPlatform Android=12,
                                                  WinUI=22}"
                            Style="{StaticResource Label}"
                            Text="Forzar elegir socio" />


                    </HorizontalStackLayout>
                </ScrollView>
            </StackLayout>

        </Grid>




    </Grid>

</ContentPage>
