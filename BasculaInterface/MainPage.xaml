<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasculaInterface.ViewModels"
            xmlns:local="clr-namespace:BasculaInterface"
            x:Class="BasculaInterface.MainPage">

    <Grid RowDefinitions="*,*">
        <Entry x:Name="EntryHost" Placeholder="Host" Grid.Row="0" FontSize="Title" IsVisible="False"/>
        <Button x:Name="BtnLogIn" Pressed="BtnLogin_Pressed" Released="BtnLogin_Released" Text="Log In" Grid.Row="1" />
    </Grid>

</ContentPage>
